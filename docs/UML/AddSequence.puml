@startuml

hide footbox

!include Style.puml
skinparam sequence {
ParticipantBorderColor black
LifeLineBorderColor black
LifeLineBackgroundColor peachpuff
}

skinparam sequenceArrowColor black

--> ":Parser": addRecipeParse()
activate ":Parser"

' Name
":Parser" -> ":Parser": parseName(String line)
activate ":Parser"

":Parser" --> ":Parser"
deactivate ":Parser"

":Parser" -> ":Recipe": Recipe(String name)
activate ":Recipe"


' Ingredients
":Parser" -> ":Parser": parseIngredients(String line, Recipe r)
activate ":Parser"

loop for all ingredients
":Parser" -> ":Recipe": addIngredient(String ingredient)
end

":Parser" --> ":Parser"
deactivate ":Parser"


":Parser" -> ":Parser": parseSteps(String line, Recipe r)
activate ":Parser"

loop for all steps
":Parser" -> ":Recipe": addStep(String step)
end

":Parser" --> ":Parser"
deactivate ":Parser"



":Recipe" --> ":Parser":
destroy ":Recipe"



destroy ":Parser"

@enduml